datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Tutor {
  courses   EnumTutorCourses[]
  createdAt DateTime           @default(now())
  date      DateTime           @unique
  email     String?            @unique
  id        String             @id @default(cuid())
  name      String
  updatedAt DateTime           @updatedAt
}

enum EnumTutorCourses {
  Math
  English
  Science
  Other
}